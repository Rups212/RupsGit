<aura:component controller="DisplayCustomerListClass" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId" 
                access="global" >
    
    <!-- calling doInit method in component controller -->
    <!-- This is used for performing some activity as soon as component load -->
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    
    <!-- Create array of Type Account Variable -->
    <aura:attribute name="accList" type="Account[]" />
    
    <!-- This is used to show a card at the top as header - Topic SLDS -->
    <article class="slds-card">
    	<div class="slds-card_header slds-grid">
        	<header class="slds-media slds-media_center slds-has-flexi-truncate">
            	<div class="slds-media_figure">
                	<span class="slds-icon_container slds-icon-standard-account" title="Description of Icon when needed">
                        <lightning:icon iconName="standard:account" size="large" alternativeText="List Account" />
                    </span>
                </div>
                <div class="slds-media_body">
                	<h2>
                    	<a href="javascript:void(0);" class="slds-card_header-link" slds="truncate" title="Account">
                        	<span class="slds-text-heading_small">Account</span>
                        </a>
                    
                    </h2>
                </div>
            </header>
        </div>
        <!-- This is used to show a Table Topic SLDS -->
        <div class="slds-card_body">
        	<table class="slds-table slds-table_bordered slds-no-row-hover slds-table_cell-buffer">
            	<!-- This is used to show a table columns -->
                <thead>
                	<tr class="slds-text-title_caps">
                    	<th scope="col">
                        	<div class="slds-truncate" title="Name">Name</div>
                        </th>
                        <th scope="col">
                        	<div class="slds-truncate" title="Type">Type</div>
                        </th>
                        <th scope="col">
                        	<div class="slds-truncate" title="Phone">Phone</div>
                        </th>
                    </tr>
                </thead>
                
                <!-- This is used to show a table body -->
                <tbody>
                	<!-- iteration Account record -->
                    <aura:iteration items="{!v.accList}" var="acc">
                    	<tr class="slds-hint-parent">
                        	<th scope="row">
                             <td>
                            	<div class="slds-truncate">
                                	<!-- showing one hyperlink, which wont do anything as of now -->
                                    <a href="javascript:void(0);">{!acc.Name}</a>
                                </div>
                             </td>
                            </th>
                            <td>
                            	<div class="slds-truncate">{!acc.Type}</div>
                            </td>
                            <td>
                            	<div class="slds-truncate" title="{!acc.Phone}">{!acc.Phone}</div>
                            </td>
                        </tr>
                    </aura:iteration>
                </tbody>
            </table>
        </div>
    </article>
</aura:component>